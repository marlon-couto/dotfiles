" Syntax highlighing
syntax on

" Show line numbers
set number
set relativenumber

" Allow copy/paste between Neovim and other apps
set clipboard=unnamedplus

" Show document title in the bottom
set title

" Keep lines above and below the cursor
set scrolloff=5

" Line wrapping
set wrap

" Indentation options
set autoindent
set expandtab
set shiftwidth=2
set softtabstop=2 

" Code folding
set foldmethod=indent
set foldnestmax=3
set foldenable
