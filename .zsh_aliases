# System apt upgrade
alias popup="sudo apt update && sudo apt full-upgrade -y && sudo snap refresh && flatpak update -y"
alias archup="yay --noconfirm && sudo snap refresh && flatpak update -y"

# Replace old apps for improved versions
alias vim="nvim"
alias ls="exa -aF"
alias grep="rg"

# Extended functionality for terminal apps
alias mkdir="mkdir -pv"
alias ps="ps auxf"
alias fd="fdfind"

# GitHub CLI
alias ghrepo="gh repo create"
alias ghclone="gh repo clone"
alias ghfork="gh repo fork"
alias ghpr="gh pr create"
